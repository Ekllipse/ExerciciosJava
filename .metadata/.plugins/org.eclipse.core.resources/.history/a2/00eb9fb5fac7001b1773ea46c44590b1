package application;

import java.util.Locale;
import java.util.Scanner;

import entities.Estudantes;

public class Program {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc  = new Scanner(System.in);
		
		System.out.println("Quantos quartos serão alugado? ");
		
		int n=sc.nextInt();
		
		Estudantes [] vect= new Estudantes[n];
		

		
		for(int i =0; i<vect.length; i++) {
			
			System.out.println("Aluguel #" + (i+1));
			
			
			System.out.print("Nome do vagabundo");
			String nome = sc.next();
			
			System.out.print("Email");
			String email = sc.next();	
			
			System.out.println("Qual quarto você deseja ficar?");
			int quarto = sc.nextInt();
			
			vect[i] = new Estudantes(nome,email,quarto);
			
		}
		
		System.out.println("Quartos ocupados: ");
		for(Estudantes e : vect) {
			
			
			System.out.println("Quarto: " + e.getQuarto() + "| " + e.getNome() +", email :" + e.getEmail());
		}
		
		vect[0].setTelefone("83999618157");
		
		System.out.println(vect[0].getTelefone());
		
			
		
		
		
		
		
		sc.close();
		

	}

}
